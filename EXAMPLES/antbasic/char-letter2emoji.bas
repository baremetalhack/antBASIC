0100 REM "=== Letter to Emoji ==="
0110 REM "BAREMETALHACK.COM --> Public domain"
0120 :
0130 DIM S[512]
0140 PRINT "Message to convert ";
0150 INPUT @
0160 IF @[0]==0 END
0170 I=0:J=0
0180 IF @[I]==0 S[J]=0:GOTO 320
0190 IF J>500 PRINT "Too long message...":END
0200 A=@[I]
0210 IF A<0x41 S[J]=A:I=I+1:J=J+1:GOTO 180
0220 IF A>0x7A S[J]=A:I=I+1:J=J+1:GOTO 180
0230 IF A>=0x61 A=A-0x61:GOTO 260
0240 IF A>0x5A S[J]=A:I=I+1:J=J+1:GOTO 180
0250 A=A-0x41
0260 IF A<16 S[J]=0xF0:S[J+1]=0x9F:S[J+2]=0x85:S[J+3]=0xB0+A:GOTO 280
0270 S[J]=0xF0:S[J+1]=0x9F:S[J+2]=0x86:S[J+3]=0x80+(A-0x10)
0280 S[J+4]=0x20
0290 I=I+1:J=J+5
0300 GOTO 180
0310 :
0320 I=0
0330 IF S[I]==0 GOTO 360
0340 @[I]=S[I]:I=I+1
0350 GOTO 330
0360 @[I]=0
0370 PRINT @:PRINT
0380 GOTO 140
